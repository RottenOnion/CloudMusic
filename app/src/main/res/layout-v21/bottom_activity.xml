<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/float_activity_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:gravity="center_vertical"
    android:layout_gravity="bottom"
    android:background="@drawable/bottom_activity_selector">

    <ImageView
        android:id="@+id/album_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="8dp"
        android:src="@drawable/album_test"
        />

    <LinearLayout
        android:id="@+id/song_information_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"

        >

        <TextView
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:lines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/singer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#8d8888"
            android:lines="1"
            android:ellipsize="end"

            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4">


    <ImageButton
        android:id="@+id/btn_prev_song"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/btn_play_pause"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@mipmap/prev_song"
        />

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/btn_next_song"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@mipmap/play_song"
            />

    <ImageButton
        android:id="@+id/btn_next_song"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@mipmap/next_song"
        />

    </RelativeLayout>


</LinearLayout>